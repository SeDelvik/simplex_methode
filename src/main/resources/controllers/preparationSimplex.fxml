<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0">
         <children>
            <VBox alignment="CENTER" prefHeight="600.0" prefWidth="816.0">
               <children>
                  <Label text="Введите размерность">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <HBox alignment="BOTTOM_CENTER" prefHeight="43.0" prefWidth="780.0" spacing="10.0">
                     <children>
                        <Spinner fx:id="sizeX" prefHeight="26.0" prefWidth="111.0" />
                        <Spinner fx:id="sizeY" prefHeight="26.0" prefWidth="109.0" />
                        <Button fx:id="nextSimplex" mnemonicParsing="false" text="Продолжить" />
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="81.0" prefWidth="780.0" spacing="20.0">
                     <children>
                        <Label text="Кол-во уравнений" />
