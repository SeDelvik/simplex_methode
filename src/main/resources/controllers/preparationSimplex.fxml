                     </children>
                     <padding>
                        <Insets right="100.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="BOTTOM_LEFT" prefHeight="43.0" prefWidth="780.0">
                     <children>
                        <Button fx:id="back" mnemonicParsing="false" text="Вернуться">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>
